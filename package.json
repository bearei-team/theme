{
  "name": "@bearei/theme",
  "version": "0.4.0",
  "main": "./lib/commonjs/index",
  "module": "./lib/module/index",
  "types": "./lib/commonjs/index.d.ts",
  "author": "bearei <bear_ei@outlook.com>",
  "description": "bear-ei project style theme",
  "license": "MIT",
  "readmeFilename": "README.md",
  "keywords": [
    "react",
    "react native",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bearei-team/theme"
  },
  "bugs": {
    "url": "https://github.com/bearei-team/theme/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "babel-loader": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "flush-promises": "^1.0.2",
    "glob": "^8.0.3",
    "jest": "^29.3.1",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "yarn clean && cross-env MODE=\"production\" yarn build:cjs && cross-env MODE=\"production\" yarn build:esm",
    "build:dev": "yarn clean && cross-env MODE=\"development\" yarn build:cjs && cross-env MODE=\"development\" yarn build:esm",
    "build:esm": "cross-env TS_NODE_PROJECT=\"tsconfig.esm.json\" LIBRARY=\"module\"  webpack --progress",
    "build:cjs": "cross-env TS_NODE_PROJECT=\"tsconfig.cjs.json\" LIBRARY=\"commonjs\" webpack --progress",
    "clean": "shx rm -rf lib",
    "test": "jest --watchAll --detectOpenHandles",
    "coverage": "yarn test --coverage",
    "lint": "eslint . --ext .jsx,.ts,.tsx",
    "fix": "yarn lint --fix",
    "publish": "yarn lint && yarn coverage && yarn build && yarn npm publish --access public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@3.3.1"
}
